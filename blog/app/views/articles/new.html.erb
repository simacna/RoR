<h1> New Ardfaticle </h1>

<%= form_for :article, url: articles_path do |f| %> <%# what is :article and |f| %>
 	<p>
		<%= f.label :title %><br> <%# :title is what will show up as the title for the text field  %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Back', controller: 'articles' %> <!-- This is the same as <%= link_to 'Back', articles_path %> -->